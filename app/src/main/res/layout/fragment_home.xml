<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_caller"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/caller_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="22dp"
        android:layout_marginTop="22dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_moptro"
        android:layout_width="71dp"
        android:layout_height="70dp"
        android:src="@drawable/moptro_logo"
        android:layout_marginTop="82dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_employee_productivity"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_moptro"
        android:textSize="18sp"
        android:text="Employee Productivity Dashboard"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="328dp"
        android:layout_height="415dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_employee_productivity"
        android:backgroundTint="#5E5E5E82">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_productivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/recyclerview_item"
            android:visibility="visible"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>